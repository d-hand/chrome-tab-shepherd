{
    "name": "TabShepherd",
    "description" : "Tab Shepherd",
    "version": "2.0",
    "manifest_version": 2,
    "permissions": ["tabs", "activeTab", "<all_urls>"],
    "background": {
        "scripts": [ "browser-polyfill.js", "background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "run_at": "document_end",
          "js": ["content.js"]
        }
    ],    
    "web_accessible_resources": [
        "pasture.html"
    ],
    "browser_action": {        
        "default_icon": "images/tabs-shepherd.png"
    }
}