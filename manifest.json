{
    "name": "TabShepherd",
    "description" : "Tab Shepherd",
    "version": "2.0",
    "manifest_version": 2,
    "permissions": ["tabs", "activeTab", "<all_urls>"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "run_at": "document_end",
          "js": ["content.js"]
        }
    ],    
    "browser_action": {        
        "default_icon": "images/tabs-shepherd.png"
    },
    "commands": {
        "_execute_browser_action": {
          "description": "Tabs Shepherd"
        }
    }
}